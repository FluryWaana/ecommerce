{% extends 'admin/base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Article_reference</th>
                <th>Article_designation</th>
                <th>Article_prix_ht</th>
                <th>Article_description_courte</th>
                <th>Article_description_longue</th>
                <th>Article_minimum_stock</th>
                <th>Article_stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.articleReference }}</td>
                <td>{{ article.articleDesignation }}</td>
                <td>{{ article.articlePrixHt }}</td>
                <td>{{ article.articleDescriptionCourte }}</td>
                <td>{{ article.articleDescriptionLongue }}</td>
                <td>{{ article.articleMinimumStock }}</td>
                <td>{{ article.articleStock }}</td>
                <td>
                    <a href="{{ path('article_show', {'article_reference': article.article_reference}) }}">show</a>
                    <a href="{{ path('article_edit', {'article_reference': article.article_reference}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
