{% extends 'admin/base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container p-0">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h1 class="col">Liste des articles</h1>
                    <div class="col-2 text-right my-auto">
                        <a href="{{ path('article_new') }}" class="text-decoration-none" style="font-size: 1.5em;" title="Créer un article">
                            <i class="fas fa-plus-circle"></i>
                        </a>
                        <a href="{{ path('article_index') }}" style="font-size: 1.5em;" title="Revenir à la liste des articles">
                            <i class="fas fa-arrow-circle-left"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Désignation</th>
                        <th>Prix ht</th>
                        <th>Stock</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.articleReference }}</td>
                            <td>{{ article.articleDesignation }}</td>
                            <td>{{ article.articlePrixHt }}</td>
                            <td>{{ article.articleStock }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('article_show', {'article_reference': article.article_reference}) }}">
                                    <i class="fas fa-eye"></i>
                                    Voir
                                </a>
                                <a class="btn btn-primary" href="{{ path('article_edit', {'article_reference': article.article_reference}) }}">
                                    <i class="fas fa-edit"></i>
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
