<form method="post" action="{{ path('article_delete', {'article_reference': article.article_reference}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.article_reference) }}">
    <button class="btn">Delete</button>
</form>
