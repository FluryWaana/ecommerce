{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>User_id</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>User_email</th>
                <td>{{ user.userEmail }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>User_password</th>
                <td>{{ user.userPassword }}</td>
            </tr>
            <tr>
                <th>User_nom</th>
                <td>{{ user.userNom }}</td>
            </tr>
            <tr>
                <th>User_prenom</th>
                <td>{{ user.userPrenom }}</td>
            </tr>
            <tr>
                <th>User_date_naissance</th>
                <td>{{ user.userDateNaissance ? user.userDateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>User_created_at</th>
                <td>{{ user.userCreatedAt ? user.userCreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>User_updated_at</th>
                <td>{{ user.userUpdatedAt ? user.userUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>User_sexe</th>
                <td>{{ user.userSexe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'user_id': user.user_id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
