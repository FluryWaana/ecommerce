{% extends 'admin/base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h1 class="col">Consultation de la cat√©gorie: {{ categorie.articleCategorieNom }}</h1>
                    <div class="col-2 text-right my-auto">
                        <a href="{{ path('categorie_index') }}" style="font-size: 1.5em;"><i class="fas fa-arrow-circle-left"></i></a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ categorie.articleCategorieId }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ categorie.articleCategorieNom }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            <img src="{{ asset( categorie.ImageUri.ImageUri ) }}" class="img-fluid cat-img-prev"/>
                        </td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex">
                    <a class="btn btn-primary mr-3" href="{{ path('categorie_edit', {'article_categorie_id': categorie.ArticleCategorieId}) }}">Modifier</a>

                    {{ include('admin/categorie/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
