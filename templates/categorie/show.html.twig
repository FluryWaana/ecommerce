{% extends 'base.html.twig' %}

{% block title %}{{ categorie.ArticleCategorieNom | capitalize }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3 col-lg-3 bg-primary rounded-left">
            <h2 class="text-center text-white">Filtrer les articles</h2>
        </div>
        <div class="col-md-9 col-lg-9 bg-white liste-article rounded-right">
            <h1>{{ categorie.ArticleCategorieNom | capitalize }}</h1>

            <nav>
                <ul class="pagination justify-content-end">
                    <li class="page-item {{ num_page == 1 ? 'disabled' }}">
                        <a class="page-link" href="{{ path('categorie', {id: categorie.Id, page: num_page - 1}) }}"> <i class="fas fa-angle-left"></i> </a>
                    </li>
                    {% for i in 1..page_max %}
                        <li class="page-item {{ num_page == i ? 'active' }}">
                            <a class="page-link" href="{{ path('categorie', {id: categorie.Id, page: i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {{ num_page == page_max ? 'disabled' }}">
                        <a class="page-link" href="{{ path('categorie', {id: categorie.Id, page: num_page + 1}) }}"> <i class="fas fa-angle-right"></i> </a>
                    </li>
                </ul>
            </nav>

            {% for article in articles %}
                <article class="row">
                    <div class="col-md-4 col-lg-4">
                        <a href="#">
                            <img class="img-fluid" src="{{ asset('images/alimentation.png') }}" alt="Article {{ article.ArticleReference }}" />
                        </a>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <div class="row">
                            <div class="col-8">
                                <a href="#">
                                    {{ article.ArticleReference }}
                                </a><br/>
                                <p class="text-justify">
                                    {{ article.ArticleDescriptionCourte }}
                                </p>
                            </div>
                            <div class="col-4">
                                <div class="price mt-2"> {{ article.ArticlePrixHt }} â‚¬</div>

                                <form class="mt-lg-3 mt-md-3">
                                    <div class="form-group">
                                        <div class="d-flex justify-content-center">
                                            <button class="btn-rem-qt-article">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="number" min="1" value="1" class="input-qt-article" />
                                            <button class="btn-add-qt-article">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>

                                    </div>
                                    <div class="form-group text-right">
                                        <button class="btn btn-primary">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </article>
            {% endfor %}

            <nav class="mt-3">
                <ul class="pagination justify-content-end">
                    <li class="page-item {{ num_page == 1 ? 'disabled' }}">
                        <a class="page-link" href="{{ path('categorie', {id: categorie.Id, page: num_page - 1}) }}"> <i class="fas fa-angle-left"></i> </a>
                    </li>
                    {% for i in 1..page_max %}
                        <li class="page-item {{ num_page == i ? 'active' }}">
                            <a class="page-link" href="{{ path('categorie', {id: categorie.Id, page: i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {{ num_page == page_max ? 'disabled' }}">
                        <a class="page-link" href="{{ path('categorie', {id: categorie.Id, page: num_page + 1}) }}"> <i class="fas fa-angle-right"></i> </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    {% endblock %}

    {% block javascripts %}
        <script>
            $(function(){
                $( '.btn-rem-qt-article' ).on('click', evt => {
                    evt.preventDefault();

                    let num = parseInt( $( $( evt.currentTarget ).siblings()[0] ).val() );

                    if( num > 1 ) {
                        num -= 1;
                        $( $( evt.currentTarget ).siblings()[0] ).val( num );
                    }
                });

                $( '.btn-add-qt-article' ).on('click', evt => {
                    evt.preventDefault();

                    let num = parseInt( $( $( evt.currentTarget ).siblings()[1] ).val() ) + 1;
                    $( $( evt.currentTarget ).siblings()[1] ).val( num );
                });
            });
        </script>
    {% endblock %}
